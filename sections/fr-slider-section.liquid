
<link href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css" rel="stylesheet">
  <style>
    .post-cards-section h2, .post-cards-section h3, .post-cards-section p, .post-cards-section ul{
    margin:0;
    padding:0;
    }
    .post-cards-section .container{
    max-width:98%;
    margin:auto;
    }
    .post-cards-section img{
    width:100%;
    height:100%;
    }
    .post-cards-section  .img-text {
    display: flex;
    gap: 10px;
    align-items: center;
      margin-bottom: 10px;
    }
    .post-cards-section .image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
    }
    .post-cards-section .splide__slide{
    display: grid;
    grid-template-columns: repeat(2, 1fr); 
    grid-template-rows: repeat(2, 1fr);   
    gap: 25px; 
    padding: 20px 15px;
          cursor: grab;
    /* margin: 0 20px; */
    }
    .post-cards-section .card-1, .post-cards-section  .card-2,  .post-cards-section .card-3{
    border-radius: 10px;
    box-shadow: 2px 1px 5px 1px #3D5446;
    padding:10px;
    height:fit-content !important;
    }
    /* .post-cards-section .card-3{
         border-radius: unset !important;
    } */
    .post-cards-section .card-1{
    grid-column: 1 / 2;
    grid-row: 1 / 2;  
    
    }
    .post-cards-section .card-2{
    grid-column: 1 / 2; 
    grid-row: 2 / 3;
    }
    .post-cards-section .card-3{
    grid-column: 2 / 3;
    grid-row: 1 / 3;   
    }
    .post-cards-section.img-text {
    margin-bottom: 12px;
    }
    .post-cards-section .des h3 {
    font-size: 20px;
    font-weight: 700;
    line-height: 25px;
    margin-bottom: 2px !important;
    color: #000;
    }
    .post-cards-section .des p {
    font-size: 14px;
    font-weight: 400;
    line-height: 20px;
    margin-bottom: 2px !important;
    color: #000;
    }
    .post-cards-section .desc p, .post-cards-section .desc li{
    font-size: 14px;
    font-weight: 400;
    line-height: 20px;
    color: #000;
    }
    @media (max-width: 575px) {
     .post-cards-section .splide__slide { 
      gap: 15px;
     }
     .post-cards-section .image {
      width: 50px;
      height: 50px;
      }
      .post-cards-section .des h3 {
      font-size: 16px;
      }
      .post-cards-section .des p {
      font-size: 12px;
      }
      .post-cards-section .desc p, .post-cards-section .desc li{
      font-size: 11px;
      line-height: 17px;
      }
    }
  </style>
{% style %}

#post-cards-section-{{ section.id }} {
  padding-top:{{ section.settings.desktop_padding_top }}px;
  padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
}
  #post-cards-section-{{ section.id }} .card{
  background-color: {{ section.settings.bg_color }}; 
  }
@media screen and (max-width: 991px) {
  #post-cards-section-{{ section.id }} {
    padding-top:{{ section.settings.mbl_padding_top }}px;
    padding-bottom:{{ section.settings.mbl_padding_bottom }}px;
  }
}
{% endstyle %}
<section class="post-cards-section" id="post-cards-section-{{ section.id }}">
 <div class="container">
   <h2>{{ section.settings.heading }}</h2>
  <div class="splide" role="group" aria-label="Splide Basic HTML Example">
    <div class="splide__track">
      <ul class="splide__list">
        {% for block in section.blocks%}
          <li class="splide__slide">
            <div class="card-1 card">
                <div class="img-text">
                  {% if block.settings.image1 %}
                    <div class="image">{{block.settings.image1 | image_url: width: block.section.image.width | image_tag: loading: 'lazy' }}</div>
                  {% endif %}
                  {% if block.settings.des1 != blank%}
                    <span class="des">{{ block.settings.des1 }}</span>
                  {% endif %}
                </div>
                {% if block.settings.desc1 != blank %}
                  <span class="desc">{{ block.settings.desc1 }}</span>
                {% endif %}
            </div>

            <div class="card-2 card">
                <div class="img-text">
                  {% if block.settings.image2 %}
                    <div class="image">{{block.settings.image2 | image_url: width: block.section.image.width | image_tag: loading: 'lazy' }}</div>
                  {% endif %}
                  {% if block.settings.des2 != blank%}
                    <span class="des">{{ block.settings.des2 }}</span>
                  {% endif %}
                </div>
                {% if block.settings.desc2 != blank %}
                  <span class="desc">{{ block.settings.desc2 }}</span>
                {% endif %}
            </div>

            <div class="card-3 card">
                <div class="img-text">
                  {% if block.settings.image3 %}
                    <div class="image">{{block.settings.image3 | image_url: width: block.section.image.width | image_tag: loading: 'lazy' }}</div>
                  {% endif %}
                  {% if block.settings.des3 != blank%}
                    <span class="des">{{ block.settings.des3 }}</span>
                  {% endif %}
                </div>
                {% if block.settings.desc3 != blank %}
                  <span class="desc">{{ block.settings.desc3 }}</span>
                {% endif %}
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
 </div>
</section>

  <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var splide = new Splide('.splide', {
      type: 'loop',
      perPage: 3,  // Default to 3 slides per page
      perMove: 1,  // Move one slide at a time
      autoplay: true,
      interval: 3000,
      arrows: false,
      pagination: false,
      breakpoints: {
        1400: {
          perPage: 2, // Show 2 slides on tablets
        },
        991: {
          perPage: 1, // Show 1 slide on mobile
        },
      },
    });

    splide.mount();
  });
</script>

