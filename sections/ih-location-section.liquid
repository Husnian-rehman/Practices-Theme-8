<style>
    .ih-location-section img{
          height: revert-layer !important;
    }
  .ih-location-section p, .ih-location-section h2, .ih-location-section h3, .ih-location-section h4{
    margin:0;
  }
  .ih-location-section  .page-width {
    max-width: 1240px;
    padding:0 20px;
  }
  .ih-location-section h2{
    color: var(--WHITE, #FFF);
    font-family: Syne;
    font-size: 36px;
    font-style: normal;
    font-weight: 500;
    line-height: 145%;
    letter-spacing: -0.72px;
    margin-bottom: 50px;
  }
  .ih-location-section .location-inner{
    display:flex;
    gap:40px;
  }
  .ih-location-section  .location-inner .adress-wrapper {
    width: 38%;
    display: flex;
    flex-direction: column;
    gap: 48px;
    border-radius: 15px;
    background: rgba(34, 34, 34, 0.90);
    backdrop-filter: blur(2.5px);
    height: 663px;
    padding: 40px;
    overflow-x: hidden;
    overflow-y: scroll;
  }
  .ih-location-section .location-inner  .map-col {
    width: 78%;
    position:relative;
  }
  .ih-location-section .location-inner  .map-col:after{
    content: '';
    position: absolute;
    width: 68%;
    height: 151px;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    border-radius: 0px 0px 15px 15px;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.00) 0%, #C02727 100%);
    z-index: 0;
  }
  .ih-location-section .image-with--text {
    display: flex;
    align-items: center;
    gap: 31px;
    margin-bottom:30px;
  }
  .ih-location-section .image-with--text h3{
    color: var(--WHITE, #FFF);
    font-family: Syne;
    font-size: 22px;
    font-style: normal;
    font-weight: 400;
    line-height: 155%; 
    letter-spacing: -0.22px;
    text-transform: uppercase;
  }
  .ih-location-section .adress-wrapper  p {
    color: var(--GRAY, #999);
    font-family: Syne;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 165%;
    text-transform: uppercase;
  }
  .ih-location-section  .map{
    border-radius: 15px;
    background: rgba(34, 34, 34, 0.90);
    backdrop-filter: blur(2.5px);
    padding: 40px;
    width: 100%;
    position: relative;
    height: 98%;
    z-index: 1;
  }
  iframe {
    width: 100%;
    border-radius: 17px;
    background: url(<path-to-image>) lightgray 50% / cover no-repeat;
    mix-blend-mode: luminosity;
    height: 100%;
  }
  .ih-location-section  .location-inner .adress-wrapper::-webkit-scrollbar {
    width: 8px;
  }
  
  .ih-location-section .location-inner .adress-wrapper::-webkit-scrollbar-track {
    background: white;
    border-radius: 20px;
    height: 519px;
  }
  
  .ih-location-section .location-inner .adress-wrapper::-webkit-scrollbar-thumb {
    border-radius: 20px;
    background: #BA2D25;
    width: 8px;
    height: 82.018px;
  }
  
  /* Hover effects */
  .ih-location-section .location-inner .adress-wrapper::-webkit-scrollbar-thumb:hover {
    background-color: #000;
  }
  @media (max-width: 767px) {
    .ih-location-section .location-inner {
      flex-direction: column-reverse;
    }
    .ih-location-section .location-inner .map-col {
      width: 100%;
      height: 313px;
    }
    .ih-location-section .map {
      padding: 40px 20px;
    }
    .ih-location-section  .location-inner .adress-wrapper {
      width: 100%;
      min-height: 336px;
    }
    .ih-location-section h2 {
      font-size: 33px;
      margin-bottom: 10px;
      text-align: center;
    }
  }
</style>
{% style %}

#ih-location-section-{{ section.id }} {
  background-color: {{ section.settings.bg_color }}; 
  padding-top:{{ section.settings.desktop_padding_top }}px;
  padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
}
@media screen and (max-width: 991px) {
  #ih-location-section-{{ section.id }} {
    padding-top:{{ section.settings.mbl_padding_top }}px;
    padding-bottom:{{ section.settings.mbl_padding_bottom }}px;
  }
}
{% endstyle %}
<section class="ih-location-section" id="ih-location-section-{{ section.id }}">
<div class="page-width">
    {% if section.settings.heading-top != blank %}
      <h2>{{ section.settings.heading-top }}</h2>
    {% endif %}
   <div class="location-inner">
   <div class="adress-wrapper">
     {% for block in section.blocks %}
       <div class="adress--col">
         <div class="image-with--text">
           {% if block.settings.image %}
            <div class="image">{{block.settings.image | image_url: width: block.section.image.width | image_tag: loading: 'lazy' }}</div>
           {% endif %}
           {% if block.settings.heading != blank %}
             <h3>{{ block.settings.heading }}</h3>
           {% endif %}
         </div>
         {% if block.settings.desc != blank  %}
           <span class="desc">{{ block.settings.desc }}</span>
         {% endif %}
       </div>
     {% endfor %}
   </div>
   <div class="map-col">
     <div class="map">
       <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d106301.30996007718!2d73.124766!3d33.6334216!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1722262572818!5m2!1sen!2s" width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
     </div>
   </div>
 </div>
</div>
</section>
{% schema %}
{
"name": "Ih Location Section",
"settings": [
   {
      "type": "text",
      "id": "heading-top",
      "label": "Heading Top"
    },
       {
        "type": "color",
        "id": "bg_color",
        "label": "BG Color",
        "default": "#FFF"
      },
     {
        "type":"header",
        "content":"Section Desktop Spacing"
      }, 
    {
        "type": "range",
        "id": "desktop_padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "desktop_padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      },
      {
        "type":"header",
        "content":"Section Mobile Spacing"
      }, 
      {
        "type": "range",
        "id": "mbl_padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "mbl_padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      },
    
],
 "blocks":[
      {
        "type":"add_step",
        "name":"Step",
        "settings":[
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "desc",
            "label": "Content",
            "default": "<p>Content</p>"
          }

    ]
      }
    ],
"presets": [
{
"name": "Ih Location Section"
}
]
}
{% endschema %}