  {% style %}
     #banner-text-form-{{ section.id }} .container {
        flex-direction: {{section.settings.desktop_alignment}};
       }
  
      #banner-text-form-{{ section.id }} {
        background-image: url('{{ section.settings.bg_desktop_image | img_url: 'master' }}');
        background-repeat: no-repeat;
        background-size: cover;
      }
     
    #banner-text-form-{{ section.id }} {
      background-color: {{ section.settings.bg_color }}; 
      padding-top:{{ section.settings.desktop_padding_top }}px;
      padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
    }
  @media screen and (max-width: 991px) {
        #banner-text-form-{{ section.id }} .container{
      flex-direction: {{section.settings.content_alignment}}
    }
    #banner-text-form-{{ section.id }} {
      padding-top:{{ section.settings.mbl_padding_top }}px;
      padding-bottom:{{ section.settings.mbl_padding_bottom }}px;
    }
      #banner-text-form-{{ section.id }} {
        background-image: url('{{ section.settings.bg_mobile_image | img_url: 'master' }}');
        background-repeat: no-repeat;
        background-size: cover;
      }
  }
